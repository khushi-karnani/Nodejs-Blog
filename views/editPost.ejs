<html>
    <title>Show Post</title>
        <link rel='stylesheet', href='/stylesheets/style.css'>
        <link rel="stylesheet" type="text/css" href="/stylesheets/structure.css">
        <link rel="stylesheet" type="text/css" href="/stylesheets/card.css">
    <body>
        <div class="nav bar" id ="nav">
            <a class="active" href="/"><button id='b1'>Home</button></a>
            <a href="/post/addpost"><button id='b2'>Add Post</button></a>
            <a href="#about"><button id='b3'>About</button></a>
            <a href="#contact"><button id='b4'>Contact</button></a>
        </div>
        <br>
            <div class="container">
                
                                        <h2>Edit Post</h2>
                                        <img src="<%= typeof postdetail.blogimage != 'undefined' ? postdetail.blogimage : '' %>" class="responsive-img">
                                        <form action="/post/<%= postdetail._id %>/edit" method="POST" class="box login">
                                            <input type="hidden" name="id" value="<%= postdetail._id%>">
                                            <div class="form-group">
                                                <label for="blogtitle">Title</label>
                                                <input class="form-control" id="blogtitle" name="blogtitle" value="<%= postdetail.blogtitle%>">
                                            </div>
                                            <div class="form-group">
                                                <label for="filepath">Image URL</label>
                                                <input class="form-control" id="filepath" name="filepath" value="<%= postdetail.blogimage%>">
                                            </div>
                                            <div class="form-group">
                                                <label for="blogcontent">Content</label>
                                                <textarea class="form-control" name="blogcontent" id="blogcontent"><%= postdetail.blogcontent%></textarea>
                                            </div>
                                            <button type="submit" class="btnLogin">Submit</button>
                                        </form>
                                        <br>
                                    </div>

            </div>
    </body>
    </html>
